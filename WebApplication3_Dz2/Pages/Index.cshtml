@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";


    string Get_json()
    {
        string str = "";
        StreamReader read = new StreamReader("appsettings.json");

        while(!read.EndOfStream)
        {
            str += read.ReadLine().ToString();
        }
      
        return str;
    }
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <h2>Hello, World!</h2>
    <h3>Date: @DateTime.Now.ToString()</h3>
    <p>Json: @Get_json()</p>

</div>
